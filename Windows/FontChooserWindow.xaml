<Window x:Class="SimpleTextEditor.FontChooserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleTextEditor"
        mc:Ignorable="d"
        Title="FontChooserWindow" Height="190" Width="300">
    <Grid>
        <ComboBox x:Name="fontComboBox"  HorizontalAlignment="Left" Margin="61,52,0,0" VerticalAlignment="Top" Width="169"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="110,100,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Choose a Font" HorizontalAlignment="Left" Margin="99,0,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
